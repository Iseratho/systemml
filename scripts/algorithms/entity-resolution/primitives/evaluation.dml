accuracy = function(Matrix[Double] PRED, Matrix[Double] GT) return (Double score) {
  HITS = PRED == GT;
  sum = sum(HITS);
  total = length(HITS);
  print("hits: " + sum);
  print("total: " + total);
  print(ncol(HITS));
  print(nrow(HITS));
  score = sum / total;
}

precision = function(Matrix[Double] PRED, Matrix[Double] GT) return (Double score) {
  tp = sum(PRED * GT);
  print("tp: " + tp);
  print("pos: " + sum(PRED));

  # fp = sum(PRED) - tp;
  # print("fp: " + fp);
  # score = tp / (tp + fp);

  score = tp / sum(PRED);
}

recall = function(Matrix[Double] PRED, Matrix[Double] GT) return (Double score) {
  tp = sum(PRED * GT);
  print("tp: " + tp);
  print("rel: " + sum(GT));

  # fn = sum(GT) - tp;
  # print("fn: " + fn);
  # score = tp / (tp + fn);

  score = tp / sum(GT);
}

f1 = function(Matrix[Double] PRED, Matrix[Double] GT) return (Double score) {
  precision = precision(PRED, GT);
  recall = recall(PRED, GT);
  print("prec: " + precision);
  print("rec: " + recall);
  score = 2 * (precision * recall) / (precision + recall);
}

print_eval_stats = function(Matrix[Double] PRED, Matrix[Double] GT) {
  print(sum(PRED));
  acc = accuracy(PRED, GT);
  print("acc: " + acc);
  f1 = f1(PRED, GT);
  print("f1: " + f1);
}
